    <div id="facequilt-container">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <h4>Our days are filled with events big and small that inspire us, surprise us, or bring us down. This is a community for sharing those moments and bringing others into the experience through their reactions.</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">

                    <button type="button" class="btn btn-default btn-sm addtext">
                        <span class="glyphicon glyphicon-plus"></span>I want to share
                    </button>

                    <div id="add-text-form">
                        <form role="form" method="post" action="/post-add-confession">
                          <div class="form-group">
                            <label for="text">What Happened?</label>
                            <textarea class="form-control" name="confession[text]" id="text" placeholder="Your text" rows="3"></textarea>
                          </div>
                          <div class="form-group">
                            <div class="col-md-10">
                              <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                          </div>
                        </form>
                    </div>
                </div>
            </div>



            {{#each confessions}}
                <div class="row confession-unit img-rounded">
                    <div class="col-md-2 confession-text img-rounded">
                        {{text}}
                    </div>
                    <div class="col-md-10" id="{{id}}">
                        {{#each reactions}}
                            <!--div class="reaction-blob">{{v}}</div-->
                        {{/each}}
                        <button chatid="{{id}}" type="button" class="btn btn-default btn-sm addreaction">
                            <span class="glyphicon glyphicon-plus"></span> Add Reaction
                        </button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

